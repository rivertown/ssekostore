    <div class="discount">
        <h2><?php echo $this->__('Promotion') ?></h2>
    </div>
<form id="discount-coupon-form" action="<?php echo $this->getUrl('checkout/cart/couponPost') ?>" method="post" class="form-inline">
	<div class="control-group row">
		<label class="control-label span2" for="coupon_code"><?php echo $this->__('Promotion Code') ?></label>
		<div class="controls span3">
			<input type="hidden" name="remove" id="remove-coupone" value="0" />
            <input class="input-text" type="text" id="coupon_code" name="coupon_code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>" />
		</div>
		<button type="submit" title="<?php echo $this->__('Apply Coupon') ?>" onclick="discountForm.submit(false)" value="<?php echo $this->__('Apply Coupon') ?>"></button>
	</div>
<?php if(strlen($this->getCouponCode())): ?>
	<a title="<?php echo $this->__('Remove Coupon') ?>" onclick="discountForm.submit(true)" value="<?php echo $this->__('Remove Coupon') ?>"><?php echo $this->__('Remove Coupon') ?></a>
<?php endif;?>

</form>
<script type="text/javascript">
//<![CDATA[
var discountForm = new VarienForm('discount-coupon-form');
discountForm.submit = function (isRemove) {
    if (isRemove) {
        $('coupon_code').removeClassName('required-entry');
        $('remove-coupone').value = "1";
    } else {
        $('coupon_code').addClassName('required-entry');
        $('remove-coupone').value = "0";
    }
    return VarienForm.prototype.submit.bind(discountForm)();
}
//]]>
</script>
